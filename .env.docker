# App Configuration
APP_NAME=StarterKit
APP_ENV=production
APP_URL=http://localhost:5005
PORT=5005

# Database Configuration
# Driver: postgres | sqlite
DB_DRIVER=postgres

# Host must match the container name of the database
DB_HOST=fullstack-gonethttp-postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=mysecretpassword
DB_NAME=starter_kit_db
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=docker_secret_key_change_this_in_production
JWT_ACCESS_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=30
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10

# SMTP Configuration (Optional for Dev)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=user
SMTP_PASSWORD=pass
EMAIL_FROM=noreply@docker-app.com